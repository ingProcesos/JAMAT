<?xml version="1.0"?>
<odoo>

  <!-- LISTA de ofertas -->
  <record id="view_estate_property_offer_list" model="ir.ui.view">
    <field name="name">estate.property.offer.list</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <list string="Offers">
        <field name="property_id"/>
        <field name="partner_id"/>
        <field name="price"/>
        <field name="status"/>
      </list>
    </field>
  </record>

  <!-- FORM de ofertas con botones -->
  <record id="view_estate_property_offer_form" model="ir.ui.view">
    <field name="name">estate.property.offer.form</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <form string="Offer">
        <header>
          <button name="action_accept" type="object" string="Accept"
                  class="btn-primary" icon="fa-check"
                  invisible="status == 'accepted'"/>
          <button name="action_refuse" type="object" string="Refuse"
                  class="btn-secondary" icon="fa-times"
                  invisible="status == 'refused'"/>
        </header>
        <sheet>
          <group>
            <field name="property_id"/>
            <field name="partner_id"/>
            <field name="price"/>
            <field name="status" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- (Opcional) Acción y menú para abrir ofertas desde el menú -->
  <!-- Si solo las manejas desde el One2many en Property, esta acción es opcional -->
  <record id="action_estate_property_offer" model="ir.actions.act_window">
    <field name="name">Offers</field>
    <field name="res_model">estate.property.offer</field>
    <field name="view_mode">list,form</field>
  </record>

</odoo>
