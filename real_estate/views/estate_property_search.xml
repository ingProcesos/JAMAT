<?xml version="1.0"?>
<odoo>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate_property.search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name"/>
                <field name="estate_property_description"/>
                <field name="surface"/>
            </search>
        </field>
    </record>

    <record id="estate_property_type_view_search" model="ir.ui.view">
        <field name="name">estate_property_type.search</field>
        <field name="model">estate_property_type</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name"/>
            </search>
        </field>
    </record>

</odoo>